    <script>
        function myFunction() {
            var myDropdown = $(".headerProfile-panel");
            if (myDropdown.hasClass('show')) {
                myDropdown.removeClass('show');
            } else {
                $(".headerProfile-panel").addClass("show");
            }
        }
        // Close the dropdown if the user clicks outside of it
        $(".headerProfile-panel").blur(function(){
            $(".headerProfile-panel").removeClass("show");
        });
    
    </script>
