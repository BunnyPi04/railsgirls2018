<!DOCTYPE html>
<html>
    <head>
        <title>Railsgirls</title>
        <%= csrf_meta_tags %>
        <%= csp_meta_tag %>
        <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap.css">
        <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap-theme.css">
        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    </head>

    <body>
        <p class="navbar-text pull-right">
        <% if user_signed_in? %>
          Logged in as <strong><%= current_user.email %></strong>.
          <%= link_to "Edit profile", edit_user_registration_path, :class => 'navbar-link' %> |
          <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %>
        <% else %>
          <%= link_to "Sign up", new_user_registration_path, :class => 'navbar-link'  %> |
          <%= link_to "Login", new_user_session_path, :class => 'navbar-link'  %>
        <% end %>
        <div id="content" class="en">
            <div class="side text-center">
                <div class="side-logo">
                    <a href="#" style="cursor: pointer;">
                        <div class="side-logoPic" style="background-image: url('https://unipos.me/q/image/logo');"></div>
                    </a>
                </div>
                <div class="side-companyName">
                    Framgia
                </div>
                <div class="sidePoint cf">
                    <span class="sidePoint_label">Welcome to Framgia app</span><br/>
                    <span class="sidePoint_num sidePoint_num-received ico-point">
                        <span class="sidePoint_txt-point">
                            <i class="fa fa-star" aria-hidden="true"></i>
                            <i class="fa fa-star" aria-hidden="true"></i>
                            <i class="fa fa-star" aria-hidden="true"></i>
                            <i class="fa fa-star" aria-hidden="true"></i>
                            <i class="fa fa-star" aria-hidden="true"></i>
                        </span>
                    </span>
                </div>
                <div class="side_line">
                    
                </div>
                <nav class="sideNav">
                    <div class="sideNav-item">
                        <a class="is-active" style="cursor: pointer;" href="/ideas/new">
                            <span class="sideNav-icon ico-popup"><i class="fa fa-plus" aria-hidden="true"></i></span>
                            <span class="sideNav-txt">New idea</span>
                        </a>
                    </div>
                    <div class="sideNav-item">
                        <a style="cursor: pointer;" href="<% edit_user_registration_path %>">
                            <span class="sideNav-icon ico-admin"><i class="fa fa-user" aria-hidden="true"></i></span>
                            <span class="sideNav-txt">Edit Profile</span>
                        </a>
                    </div>
                    <div class="sideNav-item">
                        <a style="cursor: pointer;" href="/">
                            <span class="sideNav-icon ico-chart"><i class="fa fa-bar-chart" aria-hidden="true"></i></span>
                            <span class="sideNav-txt">Dashboard</span>
                        </a>
                    </div>
                    <div class="sideNav-item">
                        <a style="cursor: pointer;" href="#">
                            <span class="sideNav-icon ico-dogEar"><i class="fa fa-file" aria-hidden="true"></i></span>
                            <span class="sideNav-txt">CEO message</span>
                        </a>
                    </div>
                    <div class="sideNav-item">
                        <a style="cursor: pointer;" href="/pages/info">
                            <span class="sideNav-icon ico-hint"><i class="fa fa-lightbulb-o" aria-hidden="true"></i></span>
                            <span class="sideNav-txt">Info</span>
                        </a>
                    </div>
                    <div class="sideNav-item">
                        <a style="cursor: pointer;" href="#">
                            <span class="sideNav-icon ico-chart"><i class="fa fa-question" aria-hidden="true"></i></span>
                            <span class="sideNav-txt">Help Center</span>
                        </a>
                    </div>
                </nav>
            </div>
            <div class="header cf">
                <div class="header-line"></div>
                <% if user_signed_in? %>
                    <div class="headerProfile">
                        <div class="headerProfile-picBtn" onclick="myFunction()">
                            <div class="headerProfile-pic" style="background-image: url('<%= current_user.gravatar_url %>');">
                            </div>
                        </div>
                        <div class="headerProfile-panel">
                            <span class="headerProfile-arrow"></span>
                            <div class="headerProfile-pic-large" style="background-image: url();"></div>
                            <p class="headerProfile-id">Logged in as</p>
                            <p class="headerProfile-id"><strong><%= current_user.email %></strong></p>
                            <div class="headerProfile-point cf">
                                
                            </div>
                            <div class="headerProfile-line"></div>
                            <a class="headerProfile-menu-config" href="<% edit_user_registration_path %>">
                                <span class="headerProfile-icon-memberInfo ico-config"><i class="fa fa-cog" aria-hidden="true"></i></span>
                                <span class="headerProfile-txt-memberInfo">Edit profile</span>
                            </a>
                            <%= link_to destroy_user_session_path, method: :delete, :class => 'headerProfile-menu-config' do  %>
                                <span class="headerProfile-icon-logout icon-logout"><i class="fa fa-sign-out" aria-hidden="true"></i></span>
                                <span class="headerProfile-txt-logout">Logout</span>
                            <% end %>
                        </div>
                    </div>
                <% else %>
                    <div class="headerProfile">
                        <div class="headerProfile-picBtn" onclick="myFunction()">
                            <div class="headerProfile-pic" style="background-image: url('data:image/png;base64,');">
                        </div>
                        </div>
                        <div class="headerProfile-panel">
                            <div class="headerProfile-line"></div>
                            <a class="headerProfile-menu-config" href="<% new_user_registration_path %>">
                                <span class="headerProfile-icon-memberInfo ico-config"><i class="fa fa-sign-in" aria-hidden="true"></i></span>
                                <span class="headerProfile-txt-memberInfo">Sign in</span>
                            </a>
                            <a class="headerProfile-menu-config" href="<% new_user_session_path %>">
                                <span class="headerProfile-icon-logout icon-logout"><i class="fa fa-user-plus" aria-hidden="true"></i></span>
                                <span class="headerProfile-txt-logout">Sign up</span>
                            </a>
                        </div>
                    </div>
                <% end %>
                <div class="headerSearch"></div>
                <div class="headerNotify"></div>
            </div>
            <div class="mainWrap">
                <div class="main">
                    <% if notice %>
                        <p class="alert alert-success"><%= notice %></p>
                    <% end %>
                    <% if alert %>
                        <p class="alert alert-danger"><%= alert %></p>
                    <% end %>
                    <%= yield %>
                </div>
            </div>
        </div>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
        <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.0.3/js/bootstrap.js"></script>
    </body>
    <script>
        function myFunction() {
            var myDropdown = $(".headerProfile-panel");
            if (myDropdown.hasClass('show')) {
                myDropdown.removeClass('show');
            } else {
                $(".headerProfile-panel").addClass("show");
            }
        }
        // Close the dropdown if the user clicks outside of it
        $(".headerProfile-panel").blur(function(){
            $(".headerProfile-panel").removeClass("show");
        });
    
    </script>
</html>
